# Environment variables for Kubernetes deployment
# Copy this file and fill in actual values

# Database
DATABASE_URL=postgresql://user:password@postgres-host:5432/uploads

# Redis
REDIS_URL=redis://redis-host:6379

# S3 Configuration
S3_REGION=us-east-1
S3_ENDPOINT=https://s3.amazonaws.com
S3_BUCKET=uploads-bucket
S3_ACCESS_KEY=your-access-key-here
S3_SECRET_KEY=your-secret-key-here

# Application Configuration
NODE_ENV=production
PORT=3000
LOG_LEVEL=info

# Authentication & Security
JWT_SECRET=your-jwt-secret-min-32-chars
JWT_ISSUER=api-gateway
INTERNAL_SERVICE_SECRET=your-internal-service-secret

# Upload Constraints
MAX_FILE_SIZE=5368709120
ALLOWED_FILE_TYPES=image/jpeg,image/png,video/mp4,application/pdf

# Feature Flags
RATE_LIMIT_ENABLED=false
AUDIT_LOG_ENABLED=true
